<!-- Page Content -->
<%- include ('navbar.ejs') %>
<div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-md-12">
        <h1 class="mt-4"><%= datas.title %></h1>
        <p class="lead">
          <a href="#"><%= datas.category.name %></a>
        </p>
        <hr>
        <p><%= datas.create_date %></p>
        <hr>

        <!-- Preview Image -->
        <div class="text-center">
        <img class="rounded" src="/<%= datas.image %>" width="800px" height="400px" alt="">
        </div>
        <hr>

        <!-- Post Content -->
        <p class="lead"><%= datas.content %></p>
        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
          <h5 class="card-header">Leave a Comment:</h5>
          <div class="card-body">
            <form action="/postcomment" method="POST">
              <input type="hidden" name="data_id" value="<%= datas._id %>">
              <div class="form-group">
              <input type="text" name="username" id="username">
              </div>
              <div class="form-group">
                <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>

        <!-- Single Comment -->
        <% datas.comments.forEach((com) => { %> 
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0"><%= com.username %></h5>
              <p><%= com.comments %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

      

  